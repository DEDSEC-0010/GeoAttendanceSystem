@model GeofenceViewModel

<div class="row">
    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Radius" class="control-label"></label>
            <div class="input-group">
                <input asp-for="Radius" class="form-control" type="number" step="1" min="1" max="10000" />
                <span class="input-group-text">meters</span>
            </div>
            <span asp-validation-for="Radius" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CenterLatitude" class="control-label"></label>
            <input asp-for="CenterLatitude" class="form-control" id="lat" readonly />
            <span asp-validation-for="CenterLatitude" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CenterLongitude" class="control-label"></label>
            <input asp-for="CenterLongitude" class="form-control" id="lng" readonly />
            <span asp-validation-for="CenterLongitude" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div id="map" style="height: 500px;" class="border rounded"></div>
        <small class="text-muted mt-2 d-block">Click on the map to set the geofence center. Drag the circle to adjust the radius.</small>
    </div>
</div>